<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingTop="48dp"
    tools:context=".CartActivity"> <!-- Cambiado a .CartActivity -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->

        <!--
            REEMPLAZA ESTO:
            <include layout="@layout/item_card" />
            <include layout="@layout/item_card" />
            <include layout="@layout/item_card" />
        -->

        <!-- POR ESTE CONTENEDOR DINÁMICO: -->
        <!-- 'weight' ayuda a empujar el total hacia abajo -->

        <!-- Contenedor para el total y el botón de pago -->
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/shopping_cart"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/cartContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/totalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_label"
                android:textColor="@color/gray_757575"
                android:textSize="18sp" />

            <Button
                android:id="@+id/payButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/pay_button"
                app:backgroundTint="?attr/colorPrimary" /> <!-- Usar backgroundTint -->
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
